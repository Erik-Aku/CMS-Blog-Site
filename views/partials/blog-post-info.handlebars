<div class="card mb-6">
  <header class="card-header card-header-title has-background-grey-lighter">
    
        <div class="column">
            <p class=" has-text-primary-light"></p>
      <a href="/post/{{id}}"  class="has-text-black is-capitalized is-pulled-left">{{blog_title}} </a></p>
      </div>

      <div class="column">
      <span class=""> </span>
      </div>
    
  </header>

    <div class="card-content">
        <div class="content has-text-justified">
            {{blog_content}}
        </div>
            <div class="is-pulled-right">
                <b>{{user.first_name}} {{user.last_name}}</b> | 
                 | {{format_date created_at}} | <a href="/post/{{id}}">{{blogcomments.length}} {{format_plural "comment" blogcomments.length}}</a>
            </div>
        
    </div>